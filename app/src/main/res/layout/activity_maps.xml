<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:TextView="http://schemas.android.com/apk/res-auto">
    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "2"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ToggleButton
            style = "@style/ServiceFilter"
            android:id = "@+id/BirdButton"
            android:textOn = "Bird"
            android:textOff = "Bird"/>
        <ToggleButton
            style = "@style/ServiceFilter"
            android:id = "@+id/FordButton"
            android:textOn = "Go Bike"
            android:textOff = "Go Bike"/>
        <ToggleButton
            style = "@style/ServiceFilter"
            android:id = "@+id/ZipcarButton"
            android:textOn = "Zipcar"
            android:textOff = "Zipcar"/>



    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/transition_root">
        <include layout = "@layout/no_start"/>

    </FrameLayout>

    <fragment android:id="@+id/autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:divider="@color/black"
        android:id="@+id/list"
        android:dividerHeight="1dp"
        android:visibility="gone"
        >

    </ListView>


</LinearLayout>
